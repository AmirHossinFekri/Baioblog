<%- include("./layouts/mainHeader.ejs") %> 

<div class="d-flex justify-content-center align-items-center h-100 register-background">
    <div class="shadow rounded-5 p-5 bg-light">
        <h2 class="text-center "><i class="fa-solid fa-pen-to-square me-2"></i>ثبت نام</h2>
        <form action="/user/register" method="post" >
            <div class="mt-2">
                <label class="form-label" for="inputfullname">نام کاربری</label>
                <input type="text" class="form-control" name="fullname" id="inputfullname">
            </div>
            <div class="mt-3">
                <label class="form-label" for="inputemail">ایمیل شما</label>
                <input class="form-control" type="email" name="email" id="inputemail">
            </div>
            <div class="mt-3">
                <label class="form-label" for="inputpassword">رمز عبور</label>
                <input type="password" name="password" id="inputpassword" class="form-control">
            </div>
            <div class="my-3">
                <label class="form-label" for="inputpasswordConfirm"> تایید رمز عبور </label>
                <input type="password" name="passwordConfirm" id="inputpasswordConfirm" class="form-control">
            </div>
            <div class="d-flex justify-content-center mb-2">
                <a href="/user/login">من اکانت دارم </a>
            </div>
            <div class="mt-4 justify-content-center d-flex">
                <button type="submit" class="btn btn-primary">ثبت نام</button>
            </div>
        </form>
    </div>
</div>

<%- include("./layouts/mainFooter.ejs") %> 